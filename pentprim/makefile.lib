.IF $(TARGET_TYPE) == LIB

BLD_BASE:=lib
LIB_PART:=prim
CFLAGS=-DBrDrv1Begin=BrDrv1SoftPrimBegin

.ELIF $(TARGET_TYPE) == DRIVER

